<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tap1_board.CommentActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/include_toolbar" />
    <View
        android:id="@+id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />
    <View
        android:id="@+id/view2"
        app:layout_constraintBottom_toTopOf="@+id/linear_input"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
<LinearLayout
    android:id="@+id/linear_input"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:weightSum="2"
    android:paddingTop="8dp"
    android:paddingRight="13dp"
    android:paddingLeft="13dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<EditText
    android:maxLines="1"
android:padding="7dp"
    android:background="@drawable/rectangle_white_comment"
    android:layout_width="0dp"
    android:layout_weight="1.7"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:text="댓글"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:background="@drawable/rectangle_blue_like"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="match_parent" />
</LinearLayout>
</android.support.constraint.ConstraintLayout>